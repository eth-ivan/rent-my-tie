<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_url "lot-ties.jpg" %>');">
  <div class="container">
    <h1><em>We have a tie for everyone!</em></h1>
  </div>
</div>

<div class="container mt-n5">
  <div class="row">

    <% @ties.each do |tie| %>
      <div class="col-xs-12 col-md-6 col-lg-4">
        <div class="card-trip">
        <%= link_to tie do %>
            <%= cl_image_tag(tie.picture.key, height: 250) %>
          <% end %>
          <div class="card-trip-infos">
            <div>
              <h2><%= tie.name %></h2>
              <p><%= tie.description.truncate(25, separator: ' ') %></p>
            </div>
            <h2>$<%= tie.price_per_day %> /day</h2>
             <%= cl_image_tag tie.user.profile_image.key, class:"card-trip-user avatar-square" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
